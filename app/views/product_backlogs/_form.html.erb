<%= form_for [@project, @product_backlog], html: {class: "form-horizontal"} do |f| %>
  <% if @product_backlog.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product_backlog.errors.count, "error") %> prohibited this product_backlog from being saved:</h2>

      <ul>
      <% @product_backlog.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
    <legend>Product Backlog Details</legend>
    <fieldset>
          <div class="control-group">
            <%= f.label :title, :class => "control-label" %>
            <div class="controls">
              <%= f.text_field :title, :placeholder => "Title goes here..." %>
            </div>
          </div>
          <div class="control-group">
            <%= f.label :description, :class => "control-label" %>
            <div class="controls">
              <%= f.text_area :description, :rows => "3", :placeholder => "Description goes here..." %>
            </div>
          </div>
          <div class="control-group">
            <%= f.label :iteration, :class => "control-label" %>
            <div class="controls">
              <%= f.number_field :iteration %>
            </div>
          </div>
          <div class="control-group">
            <%= f.label :reason, :class => "control-label" %>
            <div class="controls">
              <%= f.text_area :reason, :rows => "3", :placeholder => "Reason goes here..." %>
            </div>
          </div>
          <div class="control-group">
            <%= f.label :priority, :class => "control-label" %>
            <div class="controls">
              <%= f.number_field :priority %>
            </div>
          </div>
          <div class="form-actions">
            <%= f.submit :class => "btn btn-primary" %>
          </div>
    </fieldset>
<% end %>
