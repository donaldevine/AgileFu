<h1>Listing sprints</h1>

<table class="table">
  <tr>
    <th>Project</th>
    <th>Description</th>
    <th>Start date</th>
    <th>End date</th>
    <th>Sprint review</th>
    <th>Priority</th>
    <th>Position</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @sprints.each do |sprint| %>
  <tr>
    <td><%= sprint.project_id %></td>
    <td><%= sprint.description %></td>
    <td><%= sprint.start_date %></td>
    <td><%= sprint.end_date %></td>
    <td><%= sprint.sprint_review %></td>
    <td><%= sprint.priority %></td>
    <td><%= sprint.position %></td>
    <td><%= link_to 'Show', sprint %></td>
    <td><%= link_to 'Edit', edit_sprint_path(sprint) %></td>
    <td><%= link_to 'Destroy', sprint, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= button_to "New Sprint", new_sprint_path, :method => "get", :class => "btn btn-default" %>
<%= button_to "Back", sprints_path, :method => "get", :class => "btn btn-default" %>