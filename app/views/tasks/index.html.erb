<h1>Tasks for Sprint <%= @tasks.sprint.name %></h1>

<table class="table">
  <tr>
    <th>Story</th>
    <th>Description</th>
    <th>Priority</th>
    <th>Position</th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= link_to task.story_id, edit_task_path(task) %></td>
    <td><%= link_to task.description, edit_task_path(task) %></td>
    <td><%= link_to task.priority, edit_task_path(task) %></td>
    <td><%= link_to task.position, edit_task_path(task) %></td>
  </tr>
<% end %>
</table>

<br />

<%= button_to "New Task", new_task_path, :method => "get", :class => "btn btn-default" %>
