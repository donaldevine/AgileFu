<%= form_for @profile, html: {class: "form-horizontal"} do |f| %>
  <% if @profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% @profile.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
    <fieldset>
      <div class="control-group">
        <%= f.label :firstname, :class => "control-label" %>
        <div class="controls">
          <%= f.text_field :firstname, :placeholder => "John" %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :lastname, :class => "control-label" %>
        <div class="controls">
          <%= f.text_field :lastname, :placeholder => "Doe" %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :company, :class => "control-label" %>
        <div class="controls">
          <%= f.text_field :company, :placeholder => "ACME Corporation" %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :website, :class => "control-label" %>
        <div class="controls">
          <%= f.text_field :website, :placeholder => "http://www.website.com" %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :linkedin_account, :class => "control-label" %>
        <div class="controls">
          <%= f.text_field :linkedin_account, :placeholder => "http://www.linkedin.com/e/fpf" %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :phone, :class => "control-label" %>
        <div class="controls">
          <%= f.text_field :phone, :placeholder => "(123) 123-1234" %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :mobile, :class => "control-label" %>
        <div class="controls">
          <%= f.text_field :mobile, :placeholder => "(012) 123-1234" %>
        </div>
      </div>
      <div class="form-actions">
        <%= f.submit :class => "btn btn-primary" %>
      </div>
    </fieldset>
<% end %>
