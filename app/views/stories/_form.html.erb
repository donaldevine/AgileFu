<%= form_for [@story, @sprint], html: {class: "form-horizontal"} do |f| %>
  <% if @story.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@story.errors.count, "error") %> prohibited this story from being saved:</h2>

      <ul>
      <% @story.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
    <fieldset>
      <div class="control-group">
        <%= f.label :title, :class => "control-label" %>
        <div class="controls">
          <%= f.text_field :title, :placeholder => "Title goes here..." %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :description, :class => "control-label" %>
        <div class="controls">
          <%= f.text_area :description, :rows => "3", :placeholder => "Description of the story..." %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :priority, :class => "control-label" %>
        <div class="controls">
          <%= f.number_field :priority %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :best_case_estimate, :class => "control-label" %>
        <div class="controls">
          <%= f.number_field :best_case_estimate %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :worst_case_estimate, :class => "control-label" %>
        <div class="controls">
          <%= f.number_field :worst_case_estimate %>
        </div>
      </div>
      <div class="form-actions">
        <%= f.submit :class => "btn btn-primary" %>
      </div>
    </fieldset>
<% end %>
