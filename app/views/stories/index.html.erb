<h1>Stories for Project <%= @sprints.project.name %></h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Project</th>
    <th>Priority</th>
    <th>Best case estimate</th>
    <th>Worst case estimate</th>
  </tr>

<% @stories.each do |story| %>
  <tr>
    <td><%= link_to story.title, edit_story_path(story) %></td>
    <td><%= link_to story.description, edit_story_path(story) %></td>
    <td><%= link_to story.project_id, edit_story_path(story) %></td>
    <td><%= link_to story.priority, edit_story_path(story) %></td>
    <td><%= link_to story.best_case_estimate, edit_story_path(story) %></td>
    <td><%= link_to story.worst_case_estimate, edit_story_path(story) %></td>
  </tr>
<% end %>
</table>

<br />

<%= button_to "New Story", new_story_path, :method => "get", :class => "btn btn-default" %>
