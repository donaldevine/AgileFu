<h1>Listing stories</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Project</th>
    <th>Priority</th>
    <th>Best case estimate</th>
    <th>Worst case estimate</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @stories.each do |story| %>
  <tr>
    <td><%= story.title %></td>
    <td><%= story.description %></td>
    <td><%= story.project_id %></td>
    <td><%= story.priority %></td>
    <td><%= story.best_case_estimate %></td>
    <td><%= story.worst_case_estimate %></td>
    <td><%= link_to 'Show', story %></td>
    <td><%= link_to 'Edit', edit_story_path(story) %></td>
    <td><%= link_to 'Destroy', story, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= button_to "New Story", new_story_path, :method => "get", :class => "btn btn-default" %>
